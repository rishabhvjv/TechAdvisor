<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/input_outline_rounded"
    android:layout_margin="5dp"
    tools:context="com.techadvisor.techadvisor.RecommendationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please rank your preferences as per your usage :"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="**Hint- 1 is most important while 4 is least :"
        android:layout_margin="12dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:text="Price : "
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etMinPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="left"
            android:hint="MIN" />

        <EditText
            android:id="@+id/etMaxPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="left"
            android:hint="MAX" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:text="RAM : " />

        <EditText
            android:id="@+id/et_ram"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:text="Camera : " />

        <EditText
            android:id="@+id/et_camera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:text="Battery : " />

        <EditText
            android:id="@+id/et_battery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="Processor : " />

        <EditText
            android:id="@+id/et_processor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"

        android:text="Recommend Me !" />

</LinearLayout>
